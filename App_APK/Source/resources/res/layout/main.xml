<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@drawable/image" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
        <EditText android:textSize="20dp" android:textStyle="bold" android:textColor="@android:color/background_light" android:gravity="center" android:id="@+id/battery_level" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Battery Level" android:inputType="text"/>
        <Button android:id="@+id/nodes" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="nodes" android:onClick="nodes"/>
        <Button android:id="@+id/map" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="map" android:onClick="map"/>
    </LinearLayout>
    <ImageView android:id="@+id/imageView" android:layout_width="300dp" android:layout_height="300dp" android:layout_marginLeft="50dp" android:rotation="-90"/>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/throttle" android:background="@drawable/up" android:layout_width="60dp" android:layout_height="60dp" style="@style/Widget.Button"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <Button android:id="@+id/left" android:background="@drawable/left" android:layout_width="60dp" android:layout_height="60dp" style="@style/Widget.Button"/>
            <Button android:textSize="20dp" android:textColor="@android:color/background_light" android:id="@+id/stop" android:background="@drawable/bg_back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Stop" style="@style/Widget.Button"/>
            <Button android:id="@+id/right" android:background="@drawable/right" android:layout_width="60dp" android:layout_height="60dp" style="@style/Widget.Button"/>
        </LinearLayout>
        <Button android:id="@+id/back" android:background="@drawable/down" android:layout_width="60dp" android:layout_height="60dp" style="@style/Widget.Button"/>
    </LinearLayout>
    <View android:id="@+id/view" android:layout_width="wrap_content" android:layout_height="50dp" android:layout_weight="5"/>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:textSize="20dp" android:textColor="@android:color/background_light" android:id="@+id/mark" android:background="@drawable/bg_back" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Mark Point" android:onClick="back_nav" style="@style/Widget.Button"/>
        <Button android:textSize="20dp" android:textColor="@android:color/background_light" android:id="@+id/back_nav" android:background="@drawable/bg_back" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Back" android:onClick="back_nav" style="@style/Widget.Button"/>
    </LinearLayout>
</LinearLayout>
