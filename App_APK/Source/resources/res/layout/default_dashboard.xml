        <TextView android:textSize="10sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Laptop"/>
        <com.github.rosjava.android_extras.gingerbread.view.BatteryLevelView android:id="@+id/laptop_battery" android:layout_width="40dp" android:layout_height="25dp"/>
    </LinearLayout>
